        if (!res.ok) throw new Error((data as any)?.error || `Failed to load deal (${res.status})`);

        const d = (data as any)?.deal ?? (data as any)?.data ?? data;
        setFullDeal(d);
      } catch (e: any) {
        if (e?.name === "AbortError") return;
        setErr(e?.message || "Failed to load deal");
      } finally {
        setLoading(false);
      }
    })();

